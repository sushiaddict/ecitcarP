<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brycewang.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="85dp"
        android:layout_marginBottom="97dp"
        app:layout_constraintBottom_toTopOf="@+id/new_button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/email_edit"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="215dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="85dp"
        android:layout_marginTop="234dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/go_button"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:onClick="enterClick"
        android:text="Go!"
        tools:layout_editor_absoluteY="285dp"
        app:layout_constraintLeft_toRightOf="@+id/password_edit"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="newAccountClick"
        android:text="Create New Account"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="428dp" />
</android.support.constraint.ConstraintLayout>
